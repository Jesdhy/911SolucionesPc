@model List<PcSoluciones.Models.ViewModel.ItinerarioVista.UsuarioConItinerarioModel>

<div class="container mt-3">
    <h2 class="text-center">@ViewBag.Title</h2>

    <div id="divLista" class="form-horizontal mt-4">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Fecha de Asignación</th>
                    <th>Descripción</th>
                    <th>Número de Cédula del Técnico</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td colspan="5">@Html.DisplayFor(modelItem => item.usuario.nombre)</td>
                    </tr>
                    foreach (var itinerario in item.Itinerarios)
                    {
                        <tr>
                            <td>@itinerario.id_itinerario</td>
                            <td>@itinerario.fecha_asignacion</td>
                            <td>@itinerario.descripcion</td>
                            <td>@itinerario.num_cedulaTec</td>
                            <td>
                                <button class="btn btn-outline-primary" onclick="document.location.href='@Url.Content("~/Itinerario/Edit/" + itinerario.id_itinerario)'">Editar</button>
                                <button class="btn btn-outline-danger" onclick="eliminarItinerario(@itinerario.id_itinerario)">Eliminar</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>