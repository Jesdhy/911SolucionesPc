@model PcSoluciones.Models.ViewModel.ItinerarioVista.ItinerarioModel

@{
    ViewBag.Title = "Nuevo Itinerario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">@ViewBag.Title</h2>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="fecha_asignacion">Fecha de Asignación:</label>
                            <input type="date" id="fecha_asignacion" name="fecha_asignacion" class="form-control" required />
                        </div>

                        <div class="form-group">
                            <label for="descripcion">Descripción:</label>
                            <textarea id="descripcion" name="descripcion" class="form-control" required></textarea>
                        </div>

                        <div class="form-group">
                            <label for="num_cedulaTec">Cédula del Técnico:</label>
                            @Html.DropDownListFor(d => d.num_cedulaTec, (IEnumerable<SelectListItem>)ViewBag.NumCedulaList, "Seleccione una opción", new { @class = "form-control", id = "num_cedulaTec" })
                        </div>

                        <div class="text-center">
                            <button type="button" class="btn btn-primary" onclick="funInsertar()">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var url = "@Url.Content("~/Itinerario/Save")";

    function funInsertar() {
        fetch(url, {
            method: "POST",
            body: JSON.stringify({
                fecha_asignacion: document.getElementById("fecha_asignacion").value,
                descripcion: document.getElementById("descripcion").value,
                num_cedulaTec: document.getElementById("num_cedulaTec").value
            }),
            headers: {
                "Accept": "application/json",
                "Content-Type": "application/json"
            }
        }).then(function (response) {
            if (response.ok)
                return response.text()
            else
                alert("Error al ejecutar:(")
        }).then(function (Data) {
            if (Data != "1") {
                alert(Data)
            } else {
                window.location.href = '@Url.Content("~/Itinerario/Index")';
            }
        })
    }
</script>


