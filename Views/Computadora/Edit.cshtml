@model PcSoluciones.Models.ViewModel.ComputadoraVista.ComputadoraModel
@{
    ViewBag.Title = "Modificar Computadora";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/pictures/FondoCm.png');
            background-size: 100% 100%;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 110vh;
        }

        .container {
            max-width: 500px;
            padding: 40px;
        }

        h2 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
            text-align: center;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 30px;
            justify-content: center;
            align-items: center;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            color: #555;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        input[type="button"] {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            input[type="button"]:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">

        <form>
            <h2>@ViewBag.Title</h2>
            @Html.HiddenFor(model => model.id_computadora)

            <div class="form-group">
                <label for="modelo">Modelo:</label>
                @Html.TextBoxFor(model => model.modelo, new { id = "modelo" })
            </div>

            <div class="form-group">
                <label for="descripcion">Descripción:</label>
                @Html.TextBoxFor(model => model.descripcion, new { id = "descripcion" })
            </div>

            <!-- El campo num_cedulaClie está oculto -->
            @Html.HiddenFor(model => model.num_cedulaClie)

            <input type="button" value="Guardar" onclick="funEditar()" />
        </form>
    </div>

</body>
</html>

<script>
    var url = "@Url.Content("~/Computadora/Update")";

 function funEditar() {
     fetch(url, {
         method: "POST",
         body: JSON.stringify({
             id_computadora: document.getElementById("id_computadora").value,
             modelo: document.getElementById("modelo").value,
             descripcion: document.getElementById("descripcion").value,
             num_cedulaClie: document.getElementById("num_cedulaClie").value
         }),
         headers: {
             "Accept": "application/json",
             "Content-Type": "application/json"
         }
     }).then(function (response) {
         if (response.ok)
             return response.text()
         else
             alert("Error al ejecutar:(")
     }).then(function (Data) {
         if (Data != "1") {
             alert(Data)
         } else {
             document.location.href="@Url.Content("~/Computadora/List")"
         }
     })
 }
</script>
