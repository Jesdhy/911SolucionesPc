@{
    ViewBag.Title = "911 PC SOLUCIONES";
}

<main>
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="display-4 text-light">Bienvenido</h1>
            <p class="lead text-light">Soluciones confiables para todos tus problemas informáticos.</p>
        </div>
    </section>

    <div class="container">
        <div class="row">
            <section class="col-md-4 service">
                <p>
                    <a class="btn btn-outline-light" onclick="document.location.href='@Url.Content("~/Usuario/Index")'">
                        <img src="~/pictures/Cliente.png" alt="Texto alternativo de la imagen">
