<style>
    body {
        font-family: fantasy;
        background-image: url('https://serviciotecnicodecomputadoras.com/wp-content/uploads/2023/05/SERVICIO-TECNICO-PORTADA.png');
        background-size: cover;
        background-attachment: fixed;
        color: #ffffff; /* Color de texto blanco */
        margin: 0;
        padding: 0;
        background-color: rgb(169, 228, 255); /* Fondo con nuevo color HEX y mayor transparencia */
    }

    main {
        padding-top: 40px;
    }

    .jumbotron {
        background-color: rgba(0, 0, 0, 0.4); /* Fondo semitransparente */
        padding: 70px 0;
        margin-bottom: 0;
    }

    .service {
        margin-bottom: 30px;
    }

    .btn-primary {
        background-color: #f0b184;
        border-color: #f0b184;
    }

    .btn-outline-light {
        margin: 10px;
        background-color: #0606066d;
    }

    .text-light {
        color: #060606; /* Cambio de color de texto claro */
