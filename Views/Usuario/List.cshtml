@using PcSoluciones.Models.ViewModel
@model List<ListUsuarios>

<!-- hoja de estilos de FontAwesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<style>
    body {
        background-image: url('/pictures/fondoFr.png');
        background-size: cover;
        background-attachment: fixed;
        margin: 0;
        padding: 0;
    }
</style>

<div class="btn-container">
    <button type="button" class="btn btn-refresh" onclick="getListUsuarios()">
        <i class="fas fa-sync"></i> Refrescar
    </button>
    <button type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Usuario/New")'">
        <i class="fas fa-plus"></i> Nuevo
    </button>
</div>

<div class="container mt-3 text-center">
    <h2>@ViewBag.Title</h2>

    <div class="employee-table-container">
        <table class="table table-striped table-bordered table-container">
            <thead class="thead-dark">
                <tr>
                    <th>CÉDULA</th>
                    <th>NOMBRE</th>
                    <th>USUARIO</th>
                    <th>ACCIÓN</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.num_cedula</td>
                        <td>@usuario.nombre</td>
                        <td>@usuario.nom_usuario</td>
                        <td>
                            <a href="@Url.Action("Edit", "Usuario", new { num_cedula = usuario.num_cedula })" class="btn btn-primary">
                                <i class="fas fa-pencil-alt"></i> Editar
                            </a>
                            <button type="button" class="btn btn-danger" onclick="eliminarUsuario('@usuario.num_cedula')">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script>
        function eliminarUsuario(num_cedula) {
            if (confirm('¿Estás seguro de que deseas eliminar este usuario?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Usuario")',
                    type: 'POST',
                    data: { num_cedula: num_cedula },
                    success: function (response) {
                        if (response === "1") {
                            alert("Usuario eliminado correctamente");
                            window.location.reload();
                        } else {
                            alert("Error al eliminar el Usuario");
                        }
                    },
                    error: function () {
                        alert("Error al eliminar el usuario");
                    }
                });
            }
        }
    </script>
}



