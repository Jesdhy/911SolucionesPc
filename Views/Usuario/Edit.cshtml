@model PcSoluciones.Models.ViewModel.UsuarioVista
@{
    ViewBag.Title = "Modificar Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/pictures/FondoCm.png');
            background-size: 100% 100%;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 110vh;
        }

        .container {
            max-width: 500px;
            padding: 40px;
        }

        h2 {
            color: #333;
            text-align: center;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: center; 
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        input[type="button"] {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            input[type="button"]:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">

        <form>
            <h2>@ViewBag.Title</h2>

            @Html.HiddenFor(d => d.num_cedula)

            <div class="form-group">
                <label for="nombre">Nombre:</label>
                @Html.TextBoxFor(d => d.nombre, new { id = "nombre" })
            </div>

            <div class="form-group">
                <label for="nom_usuario">Nombre de Usuario:</label>
                @Html.TextBoxFor(d => d.nom_usuario, new { id = "nom_usuario" })
            </div>

            <input type="button" value="Guardar" onclick="funEditar()" />
        </form>
    </div>
</body>
</html>

<script>
    var url = "@Url.Content("~/Usuario/Update")";

    function funEditar() {
        fetch(url, {
            method: "POST",
            body: JSON.stringify({
                num_cedula: document.getElementById("num_cedula").value,
                nombre: document.getElementById("nombre").value,
                nom_usuario: document.getElementById("nom_usuario").value
            }),
            headers: {
                "Accept": "application/json",
                "Content-Type": "application/json"
            }
        }).then(function (response) {
            if (response.ok)
                return response.text()
            else
                alert("Error al ejecutar:(")
        }).then(function (Data) {
            if (Data != "1") {
                alert(Data)
            } else {
                document.location.href="@Url.Content("~/Usuario/")"
            }
        })
    }

</script>

